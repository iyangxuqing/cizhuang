.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.list {
  padding-bottom: 40rpx;
}

.item {
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #ddd;
}

.time {
  height: 80rpx;
  line-height: 80rpx;
}

.desc {
  font-size: 30rpx;
  line-height: 1.6;
}

.images {
  display: flex;
  min-height: 40rpx;
}

.image {
  margin: 20rpx 0;
}

.p1 .image {
  width: 100%;
  height: 450rpx;
  margin: 20rpx 0;
}

.images.pn {
  display: flex;
  flex-wrap: wrap;
}

.pn .image {
  width: 210rpx;
  height: 210rpx;
}

.pn .image:nth-of-type(3n+2) {
  margin-left: 30rpx;
  margin-right: 30rpx;
}
