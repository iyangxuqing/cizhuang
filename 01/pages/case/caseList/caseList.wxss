@import '/template/loading/loading.wxss';

.container {
  padding: 30rpx;
}

.anli {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #ddd;
}

.anli:first-child {
  border-top: 2rpx solid #ddd;
}

.anli-image {
  width: 300rpx;
  height: 260rpx;
  flex-shrink: 0;
  border-radius: 4rpx;
  border: 2rpx solid #eee;
}

.anli-text {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
}

.anli-title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 1.2em;
  color: #000;
  overflow: hidden;
}

.anli-subTitle {
  height: 40rpx;
  line-height: 40rpx;
  color: #333;
  overflow: hidden;
}

.anli-descs {
  height: 72rpx;
  line-height: 36rpx;
  font-size: 0.85em;
  color: #888;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.anli-time {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 0.85em;
  color: #333;
}
