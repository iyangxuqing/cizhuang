@import '/template/loading/loading.wxss';

.container {
  padding: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.anlis {
  margin-bottom: 160rpx;
}

.anli {
  display: flex;
  position: relative;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #ccc;
}

.anli:first-child {
  border-top: 1rpx solid #ccc;
}

.image {
  width: 300rpx;
  height: 250rpx;
  flex-shrink: 0;
  border-radius: 4rpx;
  border: 1rpx solid #e6e3e4;
}

.text {
  width: 100%;
  padding-left: 30rpx;

}

.title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 1.1em;
  color: #000;
  overflow: hidden;
}

.subTitle {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 1.0em;
  color: #333;
  overflow: hidden;
}

.descs {
  min-height: 60rpx;
  font-size: 13px;
  color: #888;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 10rpx;
}

.text-foot {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time {
  font-size: 14px;
  color: #888;
}

.praise {
  width: 60rpx;
  height: 60rpx;
  padding: 14rpx;
}