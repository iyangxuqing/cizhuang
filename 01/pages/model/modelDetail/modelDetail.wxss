page {
  height: 100%;
}

.models {
  height: 100%;
  padding: 30rpx;
}

swiper.swiper-models {
  height: 100%;
}

.model {
  height: 100%;
  display: flex;
  flex-direction: column;
}

swiper.swiper-images {
  height: 100%;
}

.model-title {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f2f2f2;
  margin-bottom: 30rpx;
}

.model-images {
  height: 480rpx;
  margin-bottom: 30rpx;
}

.model-image {
  height: 100%;
}

.model-descs {
  flex-grow: 1;
  padding: 20rpx;
  line-height: 1.6;
  overflow: hidden;
  overflow-y: auto;
  border: 1px solid #ddd;
}
