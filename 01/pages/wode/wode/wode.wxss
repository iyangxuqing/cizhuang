@import '/template/loading/loading.wxss';
@import '/template/toptip/toptip.wxss';
@import '/template/userinfo/userinfo.wxss';
@import '/template/mobile/mobile.wxss';

page {
  background: #eeeff3;
  background: #f0eff5;
  margin-bottom: 400rpx;
}

.coupons {
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-top: 40rpx;
}

.coupon {
  position: relative;
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
  border: 2rpx solid #ddd;
  margin-bottom: 40rpx;
}

.label {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 100%;
  background-color: #5cb0e2;
}

.value {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: calc(100% - 200rpx);
  height: 100%;
  margin-left: 200rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #fff;
}

.image {
  width: 160rpx;
  height: 160rpx;
}

.withMoney .image {
  /* width: 100rpx; */
  height: 80rpx;
}

.money {
  font-size: 1.2em;
  font-weight: 600;
  color: #fff;
}

.title {
  color: #333;
  font-weight: 600;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
}

.subtitle {
  width: 100%;
  font-size: 0.9em;
  padding-bottom: 20rpx;
  white-space: nowrap;
  text-overflow: clip;
  overflow: hidden;
}

.time {
  font-size: 0.9em;
  color: #888;
  padding-bottom: 20rpx;
}

.coupon:nth-of-type(1) .label{
  background-color: rgba(92, 176, 226, 0.30);
}

.coupon:nth-of-type(2) .label{
  background-color: rgba(92, 176, 226, 0.43);
}

.coupon:nth-of-type(3) .label{
  background-color: rgba(92, 176, 226, 0.57);
}

.coupon:nth-of-type(4) .label{
  background-color: rgba(92, 176, 226, 0.70);
}
