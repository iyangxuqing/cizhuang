/* listRowsEditor Template */

.item {
  display: flex;
  position: relative;
  padding: 20rpx 0;
  overflow: hidden;
  border-bottom: 2rpx solid #ccc;
}

.item:first-child {
  border-top: 1rpx solid #ddd;
}

.item-inner {
  width: 1000rpx;
  display: flex;
  align-items: center;
  transition: all 300ms ease;
}

.item-inner.swipeleft {
  transform: translateX(-300rpx);
}

.left {
  width: 690rpx;
  display: flex;
}

.right {
  width: 300rpx;
  display: flex;
  align-items: center;
}

.sort-up {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: seagreen;
}

.sort-down {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: orange;
}

.delete {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: red;
}

/* anli Template */

.anli {
  width: 100%;
  display: flex;
}

.anli-image {
  width: 300rpx;
  height: 250rpx;
  flex-shrink: 0;
  border-radius: 4rpx;
  border: 1rpx solid #e6e3e4;
}

.anli-text {
  flex-grow: 1;
  padding-left: 30rpx;
}

.anli-title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 1.1em;
  color: #000;
  overflow: hidden;
}

.anli-subTitle {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 1.0em;
  color: #333;
  overflow: hidden;
}

.anli-desc {
  min-height: 60rpx;
  font-size: 13px;
  color: #888;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 10rpx;
}

.anli-text-foot {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.anli-time {
  font-size: 14px;
  color: #888;
}

.praise {
  width: 60rpx;
  height: 60rpx;
  padding: 14rpx;
}