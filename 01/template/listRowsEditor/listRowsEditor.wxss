/* listRowsEditor Template */

.item {
  display: flex;
  position: relative;
  overflow: hidden;
}

.item-inner {
  width: 1000rpx;
  display: flex;
  align-items: center;
  transition: all 300ms ease;
}

.item-inner.swipeleft {
  transform: translateX(-310rpx);
}

.item-left {
  width: 690rpx;
  display: flex;
}

.item-right {
  width: 310rpx;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
}

.item-sort-up {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: seagreen;
}

.item-sort-down {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: orange;
}

.item-delete {
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
  background-color: red;
}

/* anli Template */

.item-anli {
  border-bottom: 1px solid #ddd;
}

.item-anli:first-child {
  border-top: 1px solid #ddd;
}

.anli {
  width: 100%;
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.anli-image {
  width: 300rpx;
  height: 250rpx;
  flex-shrink: 0;
  border-radius: 4rpx;
  border: 1rpx solid #e6e3e4;
}

.anli-text {
  flex-grow: 1;
  padding-left: 30rpx;
}

.anli-title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 1.1em;
  color: #000;
  overflow: hidden;
}

.anli-subTitle {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 1.0em;
  color: #333;
  overflow: hidden;
}

.anli-desc {
  min-height: 60rpx;
  font-size: 13px;
  color: #888;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 10rpx;
}

.anli-text-foot {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.anli-time {
  font-size: 14px;
  color: #888;
}

.anli-praise {
  width: 60rpx;
  height: 60rpx;
  padding: 14rpx;
}

/* coupon Template */

.item-coupon + .item-coupon {
  margin-top: 30rpx;
}

.coupon {
  position: relative;
  width: 100%;
  height: 200rpx;
  border: 2rpx solid #ddd;
}

.coupon-left {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 100%;
  background-color: rgba(92, 176, 226, 0.30);
}

.coupon-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: calc(100% - 200rpx);
  height: 100%;
  margin-left: 200rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #fff;
}

.coupon-image {
  width: 160rpx;
  height: 160rpx;
}

.coupon-title {
  color: #333;
  font-weight: 600;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
}

.coupon-descs {
  width: 100%;
  font-size: 0.9em;
  padding-bottom: 20rpx;
  white-space: nowrap;
  text-overflow: clip;
  overflow: hidden;
}

.coupon-notes {
  font-size: 0.9em;
  color: #888;
  padding-bottom: 20rpx;
}
