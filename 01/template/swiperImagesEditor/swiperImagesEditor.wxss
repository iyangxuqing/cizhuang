.swiper-images-editor {
  height: 100%;
  margin-left: -30rpx;
  margin-right: -30rpx;
}

.swiper-images-editor swiper {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.swiper-image-del {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: -10rpx;
  right: 20rpx;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.4);
  background-clip: content-box;
}

.swiper-image-add {
  width: calc(100% - 60rpx);
  margin: 0 auto;
  background-image: url(/images/icon/camera.png);
  background-repeat: no-repeat;
  background-size: 140rpx;
  background-position: center;
  border: 1px solid #ddd;
}