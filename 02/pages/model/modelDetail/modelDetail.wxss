page {
  height: 100%;
}

.models {
  height: 100%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

swiper.swiper-models {
  height: 100%;
}

.model {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.model-images {
  flex-shrink: 0;
  height: 600rpx;
  margin-left: -30rpx;
  margin-right: -30rpx;
  margin-bottom: 30rpx;
}

swiper.swiper-images {
  height: 100%;
}

.model-image {
  width: 100%;
  height: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.model-title {
  flex-shrink: 0;
  height: 80rpx;
  display: flex;
  align-items: center;
  text-align: center;
  margin-bottom: 30rpx;
}

.model-title-line {
  width: 100%;
  height: 2rpx;
  background-color: #ddd;
}

.model-title-text {
  flex-shrink: 0;
  font-size: 40rpx;
  margin: 30rpx;
}

.model-descs {
  flex-grow: 1;
  width: 100%;
  height: 680rpx;
  line-height: 1.6;
  overflow: hidden;
  overflow-y: auto;
}
