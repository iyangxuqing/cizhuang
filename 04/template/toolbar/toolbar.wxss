.tabs {
  position: fixed;
  z-index: 9999;
  width: 100%;
  height: 118rpx;
  padding: 12rpx 0;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f2f2f2;
  border-top: 2rpx solid #ccc;
}
.tab{
  height: 100%;
  flex-basis: 0;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.tab .icon{
  width: 50rpx;
  height: 50rpx;
}

.tab .text{
  font-size: 0.8em;
  color: #999;
}

.tab .text.active{
  color: #09bb08;
}