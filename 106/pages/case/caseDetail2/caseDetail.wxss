.container {
  width: 100%;
  height: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.list {
  padding-bottom: 40rpx;
}

.item {
   padding-bottom: 20rpx; 
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #ddd;
  margin-top: 20rpx;
}

.time {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0;
  color: #666;
  font-size: 1.1em;
}

.desc {
  font-size: 30rpx;
  line-height: 1.6;
  padding: 0;
  /* color: #555; */
  /* color: #646962; */
  /* color: #25281f; */
  /* color: #9da1a4; */
  color: #5b6d79;
}

.images {
  display: flex;
  min-height: 40rpx;
}

.image {
  margin: 20rpx 0;
}

.p1 .image {
  
  width: 400rpx;
   height: 400rpx; 
  padding: 0;
  margin: 20rpx 145rpx;
  border: 0;
}

.images.pn {
  display: flex;
  flex-wrap: wrap;
}

.pn .image {
  width: 210rpx;
  height: 210rpx;
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
}

.pn .image:nth-of-type(3n+2) {
  margin-left: 30rpx;
  margin-right: 30rpx;
}
