@import '/template/swiperImagesEditor/swiperImagesEditor.wxss';

page {
  height: 100%;
  padding: 30rpx;
}

.model {
  height: 100%;
}

.model-title {
  display: flex;
  align-items: center;
  text-align: center;
  height: 100rpx;
  background-color: #f2f2f2;
  margin-bottom: 30rpx;
}

.model-title input {
  width: 100%;
  padding: 20rpx;
}

.model-images {
  height: 560rpx;
  margin-bottom: 30rpx;
}

.model-descs{
  height: calc(100% - 720rpx);
  padding: 20rpx;
  border: 1px solid #ddd;
}
.model-desc{
  width: 100%;
  height: 100%;
}
.model-desc textarea{
  width: 100%;
  height: 100%;
}